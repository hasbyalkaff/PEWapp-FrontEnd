<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="1.5in"
        android:id="@+id/camera_view"
        app:camera_id="front" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Netral"
        android:onClick="set_netral"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/netralImageView"
            android:layout_width="match_parent"
            android:layout_height="1.5in"
            android:layout_weight="1"
            android:contentDescription="netral image" />

        <ImageView
            android:id="@+id/processedImageView"
            android:layout_width="match_parent"
            android:layout_height="1.5in"
            android:layout_weight="1"
            android:contentDescription="image on process" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expressionImageView"
            android:layout_width="match_parent"
            android:layout_height="1.5in"
            android:layout_weight="1"
            android:contentDescription="image classified" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/expressionText"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>